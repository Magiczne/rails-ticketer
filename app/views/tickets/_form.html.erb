<%= form_with(model: ticket) do |form| %>
  <% if ticket.errors.any? %>
    <div id="error_explanation" class="mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title">
        <h6><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h6>
      </div>

      <div class="mdl-card__supporting-text">
        <ul>
          <% ticket.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="mdl-textfield mdl-js-textfield" style="display: flex;">
    <%= form.label :name, class: 'mdl-textfield__label' %>
    <%= form.text_field :name, class: 'mdl-textfield__input' %>
  </div>

  <div class="mdl-textfield mdl-js-textfield" style="display: flex;">
    <%= form.label :seat_id_seq, class: 'mdl-textfield__label' %>
    <%= form.text_field :seat_id_seq, class: 'mdl-textfield__input' %>
  </div>

  <div class="mdl-textfield mdl-js-textfield" style="display: flex;">
    <%= form.label :address, class: 'mdl-textfield__label' %>
    <%= form.text_area :address, class: 'mdl-textfield__input' %>
  </div>

  <div class="mdl-textfield mdl-js-textfield" style="display: flex;">
    <%= form.label :price, class: 'mdl-textfield__label' %>
    <%= form.text_field :price, class: 'mdl-textfield__input' %>
  </div>

  <div class="mdl-textfield mdl-js-textfield" style="display: flex;">
    <%= form.label :email_address, class: 'mdl-textfield__label' %>
    <%= form.text_field :email_address, class: 'mdl-textfield__input' %>
  </div>

  <div class="mdl-textfield mdl-js-textfield" style="display: flex;">
    <%= form.label :phone, class: 'mdl-textfield__label' %>
    <%= form.text_field :phone, class: 'mdl-textfield__input' %>
  </div>

  <%= form.hidden_field :event_id %>

  <%= form.submit class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
<% end %>
