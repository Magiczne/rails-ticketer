<div class="mdl-grid">
  <div class="mdl-cell--12-col">
    <p>
      <strong>Name:</strong>
      <%= @ticket.name %>
    </p>

    <p>
      <strong>Seat id seq:</strong>
      <%= @ticket.seat_id_seq %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= @ticket.address %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @ticket.price %>
    </p>

    <p>
      <strong>Email address:</strong>
      <%= @ticket.email_address %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @ticket.phone %>
    </p>

    <p>
      <strong>Event id:</strong>
      <%= @ticket.event_id %>
    </p>

    <% if @ticket.user == current_user %>
      <%= link_to 'Edit', edit_ticket_path(@ticket), class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
    <% end %>

    <%= link_to 'Back', tickets_path, class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
  </div>
</div>