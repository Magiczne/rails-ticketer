<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mdl-textfield mdl-js-textfield" style="display: flex;">
        <%= f.label :email, class: 'mdl-textfield__label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mdl-textfield__input' %>
      </div>

      <div class="mdl-textfield mdl-js-textfield" style="display: flex;">
        <%= f.label :password, class: 'mdl-textfield__label' %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'mdl-textfield__input' %>
      </div>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />

      <div class="mdl-textfield mdl-js-textfield" style="display: flex;">
        <%= f.label :password_confirmation, class: 'mdl-textfield__label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mdl-textfield__input' %>
      </div>

      <%= f.submit "Sign up", class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
