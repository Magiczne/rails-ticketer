<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mdl-textfield mdl-js-textfield" style="display: flex;">
        <%= f.label :email, class: 'mdl-textfield__label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mdl-textfield__input' %>
      </div>

      <div class="mdl-textfield mdl-js-textfield" style="display: flex;">
        <%= f.label :password, class: 'mdl-textfield__label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'mdl-textfield__input' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <%= f.label :remember_me, class: 'mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect' do %>
          <%= f.check_box :remember_me, class: 'mdl-checkbox__input' %>
          <span class="mdl-checkbox__label">Remember me</span>
        <% end %>
      <% end %>

      <%= f.submit "Log in", class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
