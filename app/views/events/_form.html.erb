<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation" class="mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title">
        <h6 style="margin: 0"><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h6>
      </div>

      <div class="mdl-card__supporting-text">
        <ul style="margin-top: 0;">
          <% event.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="mdl-textfield mdl-js-textfield" style="display: flex;">
    <%= form.label :artist, class: 'mdl-textfield__label' %>
    <%= form.text_field :artist, class: 'mdl-textfield__input' %>
  </div>

  <div class="mdl-textfield mdl-js-textfield" style="display: flex;">
    <%= form.label :description, class: 'mdl-textfield__label' %>
    <%= form.text_area :description, class: 'mdl-textfield__input' %>
  </div>

  <div class="mdl-textfield mdl-js-textfield" style="display: flex;">
    <%= form.label :price_low, class: 'mdl-textfield__label' %>
    <%= form.text_field :price_low, class: 'mdl-textfield__input' %>
  </div>

  <div class="mdl-textfield mdl-js-textfield" style="display: flex;">
    <%= form.label :price_high, class: 'mdl-textfield__label' %>
    <%= form.text_field :price_high, class: 'mdl-textfield__input' %>
  </div>

  <div class="mdl-textfield mdl-js-textfield" style="display: flex;">
    <%= form.label :event_date, class: 'mdl-textfield__label' %>
    <%= form.text_field :event_date, class: 'mdl-textfield__input' %>
  </div>

  <%= form.submit class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
<% end %>