<div class="mdl-grid">
  <div class="mdl-cell--12-col">
    <p>
      <strong>Artist:</strong>
      <%= @event.artist %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @event.description %>
    </p>

    <p>
      <strong>Price low:</strong>
      <%= @event.price_low %>
    </p>

    <p>
      <strong>Price high:</strong>
      <%= @event.price_high %>
    </p>

    <p>
      <strong>Event date:</strong>
      <%= @event.event_date %>
    </p>

    <%= render 'new_ticket', ticket: Ticket.new(:event_id => @event.id) %>

    <%= render 'list_tickets', tickets: Ticket.where(event_id: @event.id) %>

    <br>
    <%= link_to 'Back', events_path, class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
  </div>
</div>